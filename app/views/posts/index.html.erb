<Center>
<BR>
<FONT><h1>Posts</h1>
<hr></hr>
<p id="notice"><%= notice %></p>
<font>
<BR>
<table border="1">
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.email %></td>
        <td><%= link_to 'Ver', post %></td>
        <% if admin_signed_in? %>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Eliminar', post, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      <<% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

